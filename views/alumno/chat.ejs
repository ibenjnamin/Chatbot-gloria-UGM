<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <title>Página Principal</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    integrity="sha512-KDptv5fFo4y1Y7MHdj2ZcWcXdUdCPZ5+4CclD2p08G6xqptMDwzgVfJ15DlEVRcc0fM4wwDZV3XyZwz4L3L1YA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap");

    .left-side {
      background-color: #000000;
      width: 360px;
      min-height: 100vh;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 50px;
    }

    .left-side img {
      width: 190px;
      height: 50px;
      margin-bottom: 20px;
    }

    .nbvar {
      margin-top: 90px;
    }

    .inicio,
    .conversacion,
    .paciente,
    .historial,
    .plantilla,
    .evaluacion {
      width: 200px;
      height: 40px;
      margin-top: 20px;
      border-radius: 5px 0px 0px 0px;
      opacity: 0px;
    }

    .inicio a,
    .conversacion a,
    .paciente a,
    .historial a,
    .plantilla a,
    .evaluacion a {
      width: auto;
      height: 14px;
      top: 15px;
      left: 48px;
      gap: 0px;
      opacity: 0px;
      font-family: "Open Sans";
      font-size: 15px;
      font-weight: 400;
      line-height: 13.62px;
      text-align: left;
      color: rgba(255, 255, 255, 1);
    }

    .inicio img,
    .conversacion img,
    .paciente img,
    .historial img,
    .plantilla img,
    .evaluacion img {
      width: 30px;
      height: 30px;
      margin-top: 15px;
      left: 16px;
      padding: 3.44px 2px 4px 2px;
      gap: 0px;
      opacity: 0px;
    }

    .right-content .paciente1 {
      width: 30px;
      height: 30px;
      margin-top: 20px;
      margin-left: 104px;
    }

    .right-content h3 {
      margin-top: -23px;
      width: 200px;
      height: 19px;
      margin-left: 150px;
      font-family: "Open Sans";
      font-size: 15px;
      font-weight: 400;
      line-height: 19.07px;
      text-align: left;
    }

    .box {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 131px;
      height: 29px;
      margin-top: -30px;
      margin-left: 1180px;
      border-radius: 5px;
      background-color: rgba(96, 96, 96, 1);
      border: none;
    }

    .box img {
      width: 20px;
      height: 20px;
      margin-right: 5px;
    }

    .box h2 {
      font-family: "Open Sans";
      font-size: 10px;
      font-weight: 400;
      line-height: 13.62px;
      text-align: left;
      color: white;
      margin: 0;
    }
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Lado Izquierdo -->
      <div class="col-md-3 left-side">
        <img style="margin-top: 20px" src="../imagenes/Logo.png" alt="Logo" />
        <!-- Enlaces -->
        <div class="nbvar">
            <div class="inicio">
                <a href="/alumno/home">
                    <img src="../imagenes/inicio.png" alt="Inicio" />Inicio
                </a>
            </div>
            <div class="conversacion">
                <a href="/alumno/chat">
                    <img src="../imagenes/conversacion.png" alt="Conversación" />Conversación
                </a>
            </div>
            <div class="paciente">
                <a href="/paciente.ejs">
                    <img src="../imagenes/paciente.png" alt="Paciente" />Paciente IA
                </a>
            </div>
            <div class="historial">
                <a href="/alumno/historial">
                    <img src="../imagenes/historial.png" alt="Historial" />Historial
                </a>
            </div>
            <div class="plantilla">
                <a href="/plantilla">
                    <img src="../imagenes/plantilla.png" alt="Plantilla" />Plantilla
                </a>
            </div>
            <div class="evaluacion">
                <a href="/alumno/evaluacion">
                    <img src="../imagenes/evaluacionf.png" alt="Evaluación" />Evaluación
                </a>
            </div>
        </div>
    </div>
      <!-- Lado Derecho -->
      <div class="col-md-9" style="padding: 0">
        <div class="barra" style="
              background: rgba(217, 217, 217, 1);
              max-width: 100%;
              height: 58px;
            ">
          <img src="../imagenes/danger.png" style="
                width: 36px;
                height: 36px;
                left: 1597px;
                margin-top: -5px;
                border-radius: 0px;
                margin-left: 100px;
                margin-top: 10px;
              " alt="Peligro" />
          <img src="../imagenes/usu.png" style="
                width: 42px;
                height: 42px;
                margin-left: 1000px;
                margin-top: -70px;
              " alt="" />
        </div>
        <!-- Contenido Derecho -->
        <div class="right-content">
          <div>
            <img class="paciente1" src="../imagenes/paciente1.png" alt="" />
            <h3>Paciente Rosa Altamirano</h3>
            <button class="box">
              <img src="../imagenes/ficha.png" alt="" />
              <h2>Ficha Paciente</h2>
            </button>
            <!-- Chatbot -->
            <div class="chatbot-container" style="padding: 20px;">
              <div id="chat-box" style="border: 1px solid #ddd; padding: 10px; height: 300px; overflow-y: scroll;">
                <!-- Mensajes del chat aparecerán aquí -->
              </div>
              <form id="chat-form" style="margin-top: 10px;">
                <input type="text" id="user-message" placeholder="Escribe tu mensaje..."
                  style="width: 80%; padding: 10px;" />
                <button type="submit" style="width: 18%; padding: 10px;">Enviar</button>
              </form>
            </div>

            <script>
              document.getElementById('chat-form').addEventListener('submit', async (e) => {
                e.preventDefault();

                const userMessage = document.getElementById('user-message').value;
                document.getElementById('user-message').value = '';

                const chatBox = document.getElementById('chat-box');
                chatBox.innerHTML += `<div><b>tu:</b> ${userMessage}</div>`;

                try {
                  const response = await fetch('/chat', {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ message: userMessage })
                  });

                  const data = await response.json();
                  chatBox.innerHTML += `<div><b>Gloria:</b> ${data.reply}</div>`;
                  chatBox.scrollTop = chatBox.scrollHeight;
                } catch (error) {
                  console.error('Error al enviar el mensaje:', error);
                  chatBox.innerHTML += `<div><b>Gloria:</b> Hubo un error al procesar tu mensaje.</div>`;
                }
              });
            </script>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
    function filtrarUsuarios() {
        const año = document.getElementById('años').value;
        const seccion = document.getElementById('filtro').value;

        // Realizar la solicitud al servidor
        fetch(`/filtrar-usuarios?año=${año}&seccion=${seccion}`)
            .then(response => response.json())
            .then(data => {
                // Aquí puedes actualizar la lista de usuarios en el DOM con los datos filtrados
                console.log(data); // Para fines de depuración
                // Ejemplo de cómo podrías actualizar una lista de usuarios en tu HTML:
                const userList = document.getElementById('user-list');
                userList.innerHTML = ''; // Limpiar la lista anterior
                data.forEach(user => {
                    const li = document.createElement('li');
                    li.textContent = `${user.nombre} - Sección: ${user.seccion} - Año: ${user.año}`;
                    userList.appendChild(li);
                });
            })
            .catch(error => console.error('Error al filtrar usuarios:', error));

  <script>
    // modal
    var modal = document.getElementById("myModal");

    // botón que abre el modal
    var btns = document.getElementsByClassName("view-button");

    // elemento <span> que cierra el modal
    var span = document.getElementsByClassName("close")[0];

    // Cuando el usuario hace clic en el botón, abre el modal
    for (let btn of btns) {
      btn.onclick = function () {
        modal.style.display = "block";
      };
    }

    // Cuando el usuario hace clic en <span> (x) cierra el modal
    span.onclick = function () {
      modal.style.display = "none";
    };

    // Cuando el usuario hace clic fuera del modal cierra el modal
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    };
  </script>

  <script>
    const selectAños = document.getElementById('años');
    const selectFiltro = document.getElementById('filtro');

    selectAños.addEventListener('change', filterTable);
    selectFiltro.addEventListener('change', filterTable);

    function filterTable() {
      const selectedAño = selectAños.value.toLowerCase();
      const selectedSeccion = selectFiltro.value.toLowerCase();
      const rows = document.querySelectorAll('#data-table tr');

      rows.forEach(row => {
        const año = row.cells[4].textContent.toLowerCase();
        const seccion = row.cells[5].textContent.toLowerCase();

        if ((selectedAño === "" || año.includes(selectedAño)) &&
          (selectedSeccion === "" || seccion.includes(selectedSeccion))) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    }
  </script>
  <script>
    document.getElementById('años').addEventListener('change', filtrarUsuarios);
